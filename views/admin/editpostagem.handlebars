{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar postagem: {{postagem.nome}}</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="post">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Titulo: </label>
            <input type="text" id="titulo" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <br>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" value="{{postagem.slug}}" class="form-control">
            <br>
            <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" value="{{postagem.descricao}}" class="form-control">
            <br>
            <label for="conteudo">Conteúdo: </label>
            <textarea class="form-control" type="text" id="conteudo" name="conteudo" required>{{postagem.conteudo}}</textarea>
            <br>
            <label for="categoria">Categoria: </label>
            <br>
            <select name="categoria" class="custom-select" style="float: left; margin-right: 10px; min-width: 150px; border: 1px solid #999; border-radius: 8px;">
            {{#each categorias}} 
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
            </select>
            <br>
            <br>
            <button type="submit" class="btn btn-success">Editar postagem</button>
        </form>
    </div>
</div>